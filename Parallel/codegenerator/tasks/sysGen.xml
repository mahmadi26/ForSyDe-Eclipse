<?xml version="1.0" encoding="UTF-8"?>
<project default="sysGen" name="se.kth.ict.forsyde.codegen">
    <property name="ECLIPSE_HOME" value="../../../eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="se.kth.ict.forsyde.codegen.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/se.kth.ict.forsyde.codegen/bin"/>
    </path>

    <path id="se.kth.ict.forsyde.codegen.classpath">
        <path refid="se.kth.ict.forsyde.codegen.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="se.kth.ict.forsyde.codegen.libraryclasspath.alljars">
        <pathelement location="../se.kth.ict.forsyde.codegen/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="se.kth.ict.forsyde.codegen.classpath.alljars">
        <path refid="se.kth.ict.forsyde.codegen.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="sysGen">
        <java classname="se.kth.ict.forsyde.codegen.main.SysGen" classpathref="se.kth.ict.forsyde.codegen.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="sysGen.alljars">
        <java classname="se.kth.ict.forsyde.codegen.main.SysGen" classpathref="se.kth.ict.forsyde.codegen.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
