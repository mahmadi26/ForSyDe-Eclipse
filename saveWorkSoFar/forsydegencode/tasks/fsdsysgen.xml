<?xml version="1.0" encoding="UTF-8"?>
<project default="fsdsysgen" name="forsydegencode">
    <property name="ECLIPSE_HOME" value="../../../eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="forsydegencode.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/forsydegencode/bin"/>
    </path>

    <path id="forsydegencode.classpath">
        <path refid="forsydegencode.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="forsydegencode.libraryclasspath.alljars">
        <pathelement location="../forsydegencode/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="forsydegencode.classpath.alljars">
        <path refid="forsydegencode.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="fsdsysgen">
        <java classname="forsydegencode.main.Fsdsysgen" classpathref="forsydegencode.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="fsdsysgen.alljars">
        <java classname="forsydegencode.main.Fsdsysgen" classpathref="forsydegencode.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
