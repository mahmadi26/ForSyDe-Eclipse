<?xml version="1.0" encoding="UTF-8"?>
<project default="fsdsyscgen" name="se.kth.ict.forsyde.codegen.forsydesystemc">
    <property name="ECLIPSE_HOME" value="../../../../Oxygen-Modeling/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../../../../Oxygen-Modeling/workspace"/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="se.kth.ict.forsyde.codegen.forsydesystemc.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/se.kth.ict.forsyde.codegen.forsydesystemc/bin"/>
    </path>

    <path id="se.kth.ict.forsyde.codegen.forsydesystemc.classpath">
        <path refid="se.kth.ict.forsyde.codegen.forsydesystemc.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="se.kth.ict.forsyde.codegen.forsydesystemc.libraryclasspath.alljars">
        <pathelement location="../se.kth.ict.forsyde.codegen.forsydesystemc/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="se.kth.ict.forsyde.codegen.forsydesystemc.classpath.alljars">
        <path refid="se.kth.ict.forsyde.codegen.forsydesystemc.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="fsdsyscgen">
        <java classname="se.kth.ict.forsyde.codegen.forsydesystemc.main.Fsdsyscgen" classpathref="se.kth.ict.forsyde.codegen.forsydesystemc.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="fsdsyscgen.alljars">
        <java classname="se.kth.ict.forsyde.codegen.forsydesystemc.main.Fsdsyscgen" classpathref="se.kth.ict.forsyde.codegen.forsydesystemc.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
